@{
    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
}
@model IoT_Web.Models.RegisterViewModel
@{
    ViewBag.Title = Recursos.Idioma.Registrar;
}

<div class="container-login100">
    <div class="wrap-login100">
        <div class="login100-pic js-tilt" data-tilt>
            <img src="~/Images/logo_iot_login.png" alt="IMG" style="padding-top: 50px" />
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <span class="login100-form-title">
                Regístrate
            </span>
            <div>
                <div class="wrap-input100">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @placeholder = Recursos.Idioma.CorreuElectronic })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div>
                <div class="wrap-input100">
                    @Html.DropDownListFor(m => m.RoleSelectedId, new SelectList(Model.RolesToShow, "RoleId", "RoleName", 1), Recursos.Idioma.Seleccionar, new { @class = "select-list" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.RoleSelectedText, "", new { @class = "text-danger" })
            </div>
            <div>
                <div class="wrap-input100">
                    @Html.DropDownListFor(m => m.LanguageName, new SelectList(ViewBag.List, "LanguageName", "LanguageNameTraduit"), Recursos.Idioma.Seleccionar, new { @class = "select-list" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-language" aria-hidden="true"></i>
                    </span>
                </div>
            </div>
            <div>
                <div class="wrap-input100">
                    @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = Recursos.Idioma.Contrasenya })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div>
                <div class="wrap-input100">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", @placeholder = Recursos.Idioma.ConfirmarContrasenya })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    @Recursos.Idioma.Registrarse
                </button>
            </div>
            <div class="text-center p-t-136" style="margin-top: 30px">
                <a class="txt2">
                    @Html.ActionLink(Recursos.Idioma.Tornar, "Index", "ApplicationUsers")
                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                </a>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
