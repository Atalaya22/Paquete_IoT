@model IoT_Web.Models.ConfiguracioCameresMaquines

@{
    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
}

@{
    ViewBag.Title = @Recursos.Idioma.EditarCameres;
}

<div class="container-login100">
    <div class="row justify-content-center wrap-login100">
        @using (Html.BeginForm("ActualitzarCameresMaquina", "Configuration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)
            <span class="login100-form-title">
                @Model.Nom
            </span>
            <div>
                <div class="wrap-input100">
                    @Html.TextBoxFor(m => m.Cameres, new { @class = "input100", @placeholder = @Recursos.Idioma.Cameres })
                </div>
            </div>
            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    @Recursos.Idioma.Guardar
                </button>
            </div>
            <div class="text-center p-t-136" style="margin-top: 30px;margin-bottom:20%;">
                <a class="txt2">
                    @Html.ActionLink(Recursos.Idioma.Tornar, "Index", "Configuration")
                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                </a>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
