@using IoT_Web.Models
@{
    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
}
@model LoginViewModel
@{
    ViewBag.Title = @Recursos.Idioma.IniciarSessio;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.1.0/css/flag-icon.min.css" rel="stylesheet">

<div class="container-login100">
    <div class="row wrap-login100">
        <div class="login100-pic js-tilt" data-tilt>
            <img src="~/Images/logo_iot_login.png" alt="IMG">
        </div>
        <div id="loginGeneralContent">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <span class="login100-form-title">
                    @Recursos.Idioma.IniciarSessio
                </span>
                <div>
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", @placeholder = @Recursos.Idioma.CorreuElectronic })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div>
                    <div class="wrap-input100">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = @Recursos.Idioma.Contrasenya })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        @Recursos.Idioma.IniciarSessio
                    </button>
                </div>
                @* Registre
                <div class="text-center p-t-136" style="margin-top: 30px">
                    <a class="txt2">
                        @Html.ActionLink(@Recursos.Idioma.Registrar, "Register", "Account")
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
                *@
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

