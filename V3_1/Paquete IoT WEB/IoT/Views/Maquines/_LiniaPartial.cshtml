                            }
                        </tr>
                    </tbody>
                </table>

                <hr color="white">

                <table class="table" style="width:50%;margin-left:auto;margin-right:auto;" border="1">
                    <thead style="background:linear-gradient(205deg, #B8C9CD, #D5E2E4);">
                        <tr>
                            <th colspan="2" style="text-align: center;">@Recursos.Idioma.TotalMaquina</th>
                        </tr>
                    </thead>
                    <tbody style="background:white;">
                        <tr align="center">
                            <td>@Recursos.Idioma.TempsTotalFuncionament:</td>
                            @if (Model.Linia.EstatsFrequents.Any(e => e.EstatId == 4))
                            {
                                TimeSpan estat = Model.Linia.EstatsFrequents.Find(e => e.EstatId == 4).Duracio;
                                <td>@(estat.Days * 24 + estat.Hours)h @estat.Minutes.ToString()min @estat.Seconds.ToString()s</td>
                            }
                            else
                            {
                                string result = "0";
                                <td>@result</td>
                            }
                        </tr>
                        <tr align="center">
                            <td>@Recursos.Idioma.Rebutjats: </td>
                            @if (@Model.Linia.Estats.Count() > 0)
                            {
                                <td>
                                    @Model.Linia.Estats.Max(e => e.RebuigTotal)
                                </td>
                            }
                            else
                            {
                                <td>
                                    0
                                </td>
                            }
                        </tr>
                        <tr align="center">
                            <td>@Recursos.Idioma.CanvisFormat: </td>
                            <td>@Model.Linia.Estats.Where(e => e.EstatId == 5).Count()</td>
                        </tr>
                        <tr align="center">
                            <td style="width:50%;">@Recursos.Idioma.CadenciaMitja:</td>
                            @if (Model.Linia.Estats.Count() > 0 && Model.Linia.EstatsFrequents.Any(e => e.EstatId == 4))
                            {
                                TimeSpan estat = Model.Linia.EstatsFrequents.Find(e => e.EstatId == 4).Duracio;
                                double minutsTotals = estat.Days * 24 * 60 + estat.Hours * 60 + estat.Minutes;
                                double prodTotals = Model.Linia.Estats.Last().ProductesTotals;
                                string result;
                                if (minutsTotals < 1)
                                {
                                    result = $"{Math.Round(prodTotals / 1, 2).ToString()}/min";
                                }
                                else
                                {
                                    result = $"{Math.Round(prodTotals / minutsTotals, 2).ToString()}/min";
                                }
                                <td>@result</td>
                            }
                            else
                            {
                                string result = "0/min";
                                <td>@result</td>
                            }
                        </tr>
                    </tbody>
                </table>

                <hr color="white">

                <table class="table" style="width:50%;margin-left:auto;margin-right:auto;" border="1">
